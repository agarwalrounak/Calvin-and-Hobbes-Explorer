{
  "manifest_version": 2,
  "name": "CalvinHobbes Discoverer",
  "version": "1.0",
  "description": "Display a random Calvin and Hobbes comic",
  "icons": {
    "16": "icon-16.png",
    "24": "icon-24.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "popup.js"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "hello.html",
    "default_icon": "Calvin-And-Hobbes.png"
  }
}
